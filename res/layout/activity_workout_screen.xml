<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/i_bg_00"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:background="#E1E1E1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:text="CURRENT EXERCISE"
                    android:textColor="#4D4C4C"
                    android:textSize="@dimen/text_18" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="BACK EXTENSION"
                    android:textColor="#3A3A3A"
                    android:textSize="@dimen/text_32"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="2px"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="#DFDFDF" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/ivTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/k_countdown_icon_interval" />

                    <TextView
                        android:id="@+id/tvIntervalTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/ivTime"
                        android:text="INTERVAL TIME"
                        android:textColor="#4D4C4C"
                        android:textSize="@dimen/text_18" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvIntervalTime"
                        android:layout_gravity="center_horizontal"
                        android:layout_toRightOf="@id/ivTime"
                        android:text="00:30"
                        android:textColor="#4D4C4C"
                        android:textSize="@dimen/text_32"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/ivHeart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/k_countdown_icon_heart" />

                    <TextView
                        android:id="@+id/tvHeart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/ivHeart"
                        android:text="HEART RATE"
                        android:textColor="#4D4C4C"
                        android:textSize="@dimen/text_18" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvHeart"
                        android:layout_toRightOf="@id/ivHeart"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvHeartTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text="120"
                            android:textColor="#4D4C4C"
                            android:textSize="@dimen/text_32"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:text="BPM"
                            android:textColor="#4D4C4C"
                            android:textSize="@dimen/text_18"
                            android:textStyle="bold" />
                    </LinearLayout>

                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/ivPausePlay"
                        android:layout_width="100dp"
                        android:layout_height="110dp"
                        android:scaleType="fitXY"
                        android:layout_gravity="right|center_vertical"
                        android:background="@drawable/workout_screen_end_selector" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/ivStartPlay"
                        android:layout_width="100dp"
                        android:layout_height="110dp"
                        android:scaleType="fitXY"
                        android:layout_gravity="left|center_vertical"
                        android:background="@drawable/workout_screen_start_selector" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/llBottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/tvCalories"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CALORIES"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvCalories"
                            android:text="250"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_60"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/tvDistanceTop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DISTANCE"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/tvDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvDistanceTop"
                            android:layout_centerVertical="true"
                            android:text="2.25"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_60"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="60dp"
                            android:layout_toRightOf="@id/tvDistance"
                            android:text="Mi"
                            android:textColor="@android:color/white" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/tvWatts"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WATTS"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvWatts"
                            android:text="150"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_60"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/tvMets"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="METS"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvMets"
                            android:text="5.0"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_60"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/tvSpeedTop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SPEED"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/tvSpeed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvSpeedTop"
                            android:text="17"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_60"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="60dp"
                            android:layout_toRightOf="@id/tvSpeed"
                            android:text="Mph"
                            android:textColor="@android:color/white" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/tvRpm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RPM"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvRpm"
                            android:text="75"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_60"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/llBottom"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/k_countdown_bg_leftpanel"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="THIS COUNT"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/text_26" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tvCalories"
                                android:text="250"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/text_60"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="THIS COUNT"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/text_26" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tvCount"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/text_60"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvTotalCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="TOTAL COUNT"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/text_26" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tvTotalCount"
                                android:text="239"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/text_60"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/ivAnim"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"></ImageView>

                <LinearLayout
                    android:background="@drawable/k_countdown_bg_rightpanel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tvResistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="RESISTANCE"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_26" />

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="30dp"
                            android:layout_toRightOf="@id/tvResistance"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/k_countdown_but_workout_n" />

                        <LinearLayout
                            android:id="@+id/llColor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvResistance"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:orientation="vertical"></LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.1">

                        <ImageView
                            android:id="@+id/ivReduceWeight"
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/i_control_sub_n" />


                        <ImageView
                            android:id="@+id/ivWeight"
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/i_control_add_n" />
                        <TextView
                            android:id="@+id/tvBottmWeight"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/i_workout_overlay"
                            android:layout_toLeftOf="@id/ivWeight"
                            android:layout_toRightOf="@id/ivReduceWeight"
                            android:gravity="center"
                            android:text="150"
                            android:textColor="#FEFEFE"
                            android:textSize="@dimen/text_40" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:text="TOTAL TIME"
                            android:textColor="@android:color/white"
                            android:layout_below="@id/ivWeight"
                            android:textSize="@dimen/text_28" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.9">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/i_workout_overlay"
                            android:gravity="center"
                            android:text="30:00"
                            android:textStyle="bold"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_40" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlStart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#dd000000"
        >

        <TextView
            android:id="@+id/tvStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/k_countdown_bg_shape"
            android:gravity="center"
            android:text="3"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_140"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tvStart"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="GRAB HANDLES"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_60"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvStart"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="START PEDALING"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_60"
            android:textStyle="bold" />
    </RelativeLayout>
</FrameLayout>
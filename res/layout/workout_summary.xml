<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/m_bg_popup" >

    <RelativeLayout
        android:id="@+id/rlHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tvHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/workout_summary_home_selector"
            android:clickable="true"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_20" />

        <TextView
            android:id="@+id/tvUsb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@id/tvHome"
            android:background="@drawable/workout_summary_usb_selector"
            android:clickable="true"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:visibility="invisible"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_20" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:text="Workout Summary"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_22"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tvBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="Congratulations... For more workout options visit www.avantifitness.com"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_24" >
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tvBottom"
        android:layout_below="@id/rlHead"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STRENGTH"
                android:textColor="#7BB5DF"
                android:textSize="@dimen/text_24" />

            <LinearLayout style="@style/workout_summary_ll" >

                <TextView
                    style="@style/workout_summary_left_tv"
                    android:text="EXERCISE" />

                <TextView
                    style="@style/workout_summary_middle_tv"
                    android:text="AVG" />

                <TextView
                    style="@style/workout_summary_middle_tv"
                    android:text="TOTAL" />
            </LinearLayout>

            <View style="@style/workout_summary_line" />

            <LinearLayout style="@style/workout_summary_ll" >

                <TextView
                    style="@style/workout_summary_left_tv"
                    android:text="Back Extension" />

                <TextView
                    style="@style/workout_summary_middle_tv"
                    android:text="25" />

                <TextView
                    style="@style/workout_summary_middle_tv"
                    android:text="190" />
            </LinearLayout>

            <View style="@style/workout_summary_line" />

            <LinearLayout style="@style/workout_summary_ll" >

                <TextView
                    style="@style/workout_summary_left_tv"
                    android:text="Biceps Curl" />

                <TextView
                    style="@style/workout_summary_middle_tv"
                    android:text="35" />

                <TextView
                    style="@style/workout_summary_middle_tv"
                    android:text="210" />
            </LinearLayout>

            <View style="@style/workout_summary_line" />

            <LinearLayout style="@style/workout_summary_ll" >

                <TextView
                    style="@style/workout_summary_left_tv"
                    android:text="Triceps Kickback" />

                <TextView
                    style="@style/workout_summary_middle_tv"
                    android:text="27" />

                <TextView
                    style="@style/workout_summary_middle_tv"
                    android:text="162" />
            </LinearLayout>

            <View style="@style/workout_summary_line" />

            <LinearLayout style="@style/workout_summary_ll" >

                <TextView
                    style="@style/workout_summary_left_tv"
                    android:text="Shoulder Hi/Lo" />

                <TextView
                    style="@style/workout_summary_middle_tv"
                    android:text="26" />

                <TextView
                    style="@style/workout_summary_middle_tv"
                    android:text="156" />
            </LinearLayout>

            <View style="@style/workout_summary_line" />

            <LinearLayout style="@style/workout_summary_ll" >

                <TextView
                    style="@style/workout_summary_left_tv"
                    android:text="Seated Row" />

                <TextView
                    style="@style/workout_summary_middle_tv"
                    android:text="32" />

                <TextView
                    style="@style/workout_summary_middle_tv"
                    android:text="192" />
            </LinearLayout>

            <View style="@style/workout_summary_line" />

            <LinearLayout style="@style/workout_summary_ll" >

                <TextView
                    style="@style/workout_summary_left_tv"
                    android:text="AVG. REPS/INTERVAL" />

                <TextView
                    style="@style/workout_summary_middle_tv"
                    android:text="" />

                <TextView
                    style="@style/workout_summary_middle_tv"
                    android:text="24" />
            </LinearLayout>

            <View style="@style/workout_summary_line" />

            <LinearLayout style="@style/workout_summary_ll" >

                <TextView
                    style="@style/workout_summary_left_tv"
                    android:text="GRAND TOTAL REPS"
                    android:textSize="@dimen/text_26" />

                <TextView
                    style="@style/workout_summary_middle_tv"
                    android:text="" />

                <TextView
                    style="@style/workout_summary_middle_tv"
                    android:text="810"
                    android:textSize="@dimen/text_30" />
            </LinearLayout>

            <View style="@style/workout_summary_line" />
        </LinearLayout>

        <View
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            android:background="#2A2E31" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout style="@style/workout_summary_ll" >

                <TextView
                    style="@style/workout_summary_left_tv"
                    android:text="Time"
                    android:textSize="@dimen/text_26" />

                <TextView
                    style="@style/workout_summary_middle_tv"
                    android:text="30:00"
                    android:textSize="@dimen/text_30" />
            </LinearLayout>

            <View style="@style/workout_summary_line" />

            <LinearLayout style="@style/workout_summary_ll" >

                <TextView
                    style="@style/workout_summary_left_tv"
                    android:text="Distance"
                    android:textSize="@dimen/text_26" />

                <TextView
                    style="@style/workout_summary_middle_tv"
                    android:text="5.4Mi"
                    android:textSize="@dimen/text_30" />
            </LinearLayout>

            <View style="@style/workout_summary_line" />

            <LinearLayout style="@style/workout_summary_ll" >

                <TextView
                    style="@style/workout_summary_left_tv"
                    android:text="Calories"
                    android:textSize="@dimen/text_26" />

                <TextView
                    style="@style/workout_summary_middle_tv"
                    android:text="286"
                    android:textSize="@dimen/text_30" />
            </LinearLayout>

            <View style="@style/workout_summary_line" />

            <LinearLayout style="@style/workout_summary_ll" >

                <TextView
                    style="@style/workout_summary_left_tv"
                    android:text="AVG.RPM"
                    android:textSize="@dimen/text_26" />

                <TextView
                    style="@style/workout_summary_middle_tv"
                    android:text="74"
                    android:textSize="@dimen/text_30" />
            </LinearLayout>

            <View style="@style/workout_summary_line" />

            <LinearLayout style="@style/workout_summary_ll" >

                <TextView
                    style="@style/workout_summary_left_tv"
                    android:text="AVG.Speed"
                    android:textSize="@dimen/text_26" />

                <TextView
                    style="@style/workout_summary_middle_tv"
                    android:text="8.5MPH"
                    android:textSize="@dimen/text_30" />
            </LinearLayout>

            <View style="@style/workout_summary_line" />

            <LinearLayout style="@style/workout_summary_ll" >

                <TextView
                    style="@style/workout_summary_left_tv"
                    android:text="Min.Heart Rate"
                    android:textSize="@dimen/text_26" />

                <TextView
                    style="@style/workout_summary_middle_tv"
                    android:text="80BPM"
                    android:textSize="@dimen/text_30" />
            </LinearLayout>

            <View style="@style/workout_summary_line" />

            <LinearLayout style="@style/workout_summary_ll" >

                <TextView
                    style="@style/workout_summary_left_tv"
                    android:text="Max.Heart Rate"
                    android:textSize="@dimen/text_26" />

                <TextView
                    style="@style/workout_summary_middle_tv"
                    android:text="174BPM"
                    android:textSize="@dimen/text_30" />
            </LinearLayout>

            <View style="@style/workout_summary_line" />

            <LinearLayout style="@style/workout_summary_ll" >

                <TextView
                    style="@style/workout_summary_left_tv"
                    android:text="AVG.Heart Rate"
                    android:textSize="@dimen/text_26" />

                <TextView
                    style="@style/workout_summary_middle_tv"
                    android:text="143BPM"
                    android:textSize="@dimen/text_30" />
            </LinearLayout>

            <View style="@style/workout_summary_line" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
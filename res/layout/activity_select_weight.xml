<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#C4C4C4">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.2"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="20dp">

        <RelativeLayout
            android:id="@+id/rlHead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivLibs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/n_but_lbs_n"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="10dp" />

                <ImageView
                    android:id="@+id/ivKg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/n_but_kg_l"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="10dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="Select Weight"
                android:textColor="#595657"
                android:textSize="@dimen/text_18"
                android:textStyle="bold" />

            <GridView
                android:id="@+id/gridView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tvTitle"
                android:background="@drawable/select_weight_bg"
                android:horizontalSpacing="25dp"
                android:layout_marginTop="10dp"
                android:numColumns="3"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="20dp"
                android:verticalSpacing="20dp"></GridView>
        </RelativeLayout>


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:paddingTop="30dp"
        android:paddingLeft="100dp"
        android:paddingRight="100dp">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvManual"
                style="@style/tv_green"
                android:layout_marginTop="10dp"
                android:text="Manual" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ivGo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/heart_rate_go_selector"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tvProgram"
                style="@style/tv_green"
                android:layout_below="@id/ivGo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Program" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvSg"
                style="@style/tv_green"
                android:text="Select Goal"
                android:layout_marginTop="10dp"/>
        </FrameLayout>

    </LinearLayout>

</LinearLayout>
